{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "VPC Peering between Transit and LOB",
    "Parameters": {
        "LOBVPCStackName": {
            "Description": "Name of an active CloudFormation stack that contains the VPC resources that will be used in this stack.",
            "Type": "String",
            "MinLength": 1,
            "MaxLength": 255,
            "AllowedPattern": "^[a-zA-Z][-a-zA-Z0-9]*$",
            "Default": "lobvpc"
        },
        "LOB1StackName": {
            "Description": "Name of an active CloudFormation stack that contains the VPC resources that will be used in this stack.",
            "Type": "String",
            "MinLength": 1,
            "MaxLength": 255,
            "AllowedPattern": "^[a-zA-Z][-a-zA-Z0-9]*$",
            "Default": "lob1"
        },
        "LOB2StackName": {
            "Description": "Name of an active CloudFormation stack that contains the VPC resources that will be used in this stack.",
            "Type": "String",
            "MinLength": 1,
            "MaxLength": 255,
            "AllowedPattern": "^[a-zA-Z][-a-zA-Z0-9]*$",
            "Default": "lob2"
        },
        "TransitVPCStackName": {
            "Description": "Name of an active CloudFormation stack that contains the VPC resources that will be used in this stack.",
            "Type": "String",
            "MinLength": 1,
            "MaxLength": 255,
            "AllowedPattern": "^[a-zA-Z][-a-zA-Z0-9]*$",
            "Default": "transitvpc"
        }
        // Need to grab the route table IDs of the public route tables
    },
    "Resources": {
        "myVPCPeeringConnection": {
            "Type": "AWS::EC2::VPCPeeringConnection",
            "Properties": {
                "VpcId": {
                    "Fn::ImportValue" : {
                        "Fn::Sub": "${LOBVPCStackName}-VPCID"
                        }
                },
                "PeerVpcId": {
                    "Fn::ImportValue" : {
                        "Fn::Sub" : "${TransitVPCStackName}-VPCID" 
                    }
                }
            }
        },
        // Create routes in the route tables of the VPCs to point to the peer link
        "LOB1TransitRoute": {
            "Type": "AWS::EC2::Route",
            "Properties": {
                "RouteTableId": {
                    "Fn::ImportValue": {
                        "Fn::Sub": "${LOB1StackName}-PublicRTID"
                    }
                },
                "DestinationCidrBlock": "10.3.0.0/16",
                "GatewayId": {
                    "Ref" : "myVPCPeeringConnection"
                    // "Fn::GetAtt": [ "LOBSSHSecGrp", "GroupId" ]
                }
            }
        }
    }
}